{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "typeRoots": ["./node_modules/@types", "./client/src/types"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@server/*": ["./server/*"],
      "@types/*": ["./client/src/types/*"],
      "@utils/*": ["./client/src/lib/*"],
      "@components/*": ["./client/src/components/*"],
      "@services/*": ["./client/src/services/*"],
      "@hooks/*": ["./client/src/hooks/*"],
      "@features/*": ["./client/src/features/*"],
      
      /* Component path mappings for JS to TS conversion */
      "*/atoms/button": ["./shared/components/atoms/button.tsx"],
      "*/atoms/button.js": ["./shared/components/atoms/button.tsx"],
      "*/molecules/card": ["./shared/components/molecules/card.tsx"],
      "*/molecules/card.js": ["./shared/components/molecules/card.tsx"]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
